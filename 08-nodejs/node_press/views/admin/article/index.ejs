<%- include('../../templates/header.ejs') %>

<body>
    <%- include('../../templates/nav.ejs') %>
    <div class="container">
        <a href="/create-article" class="btn btn-success">Criar artigo</a>
        <hr>
        Lista de Artigos
        <table class="table">
            <thead>
                <tr>
                    <th>#ID</th>
                    <th>Titulo</th>
                    <th>Categoria</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article=>{ %>
                    <tr>
                        <td><%= article.id %> </td>
                        <td><%= article.title %> </td>
                        <td><%= article.category.title %> </td>
                        <td> 
                            <a href="/article/edit/<%= article.id %>">Editar</a>

                            <form action="/delete/article" method="POST" style="display: inline;" onsubmit="deleteConfirm(event, this)">
                                <input type="hidden" name="id" value="<%= article.id %>">
                                <button type="submit" class="btn btn-danger">Excluir</button> 
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
