<%- include('../../templates/header.ejs') %>

<body>
    <%- include('../../templates/nav.ejs') %>

    <div class="container">
        <div class="row">
            <form action="/save-article" method="POST">
                <h2>Cadatro de artigos</h2>
                <select name="idCategory">
                    <% categories.forEach((category, index) => {%>
                    <% if(index === 1 && catselected != undefined) { %>
                        <option value="<%= catselected.id %> "><%= catselected.title %></option>
                    <% }else {%>
                        <option value="<%= category.id %> "><%= category.title %></option>
                    <%} %>
                    <% index++ }) %>
                </select>
                <input type="text" class="form-control" name="title" value="<%= article.title %>"> <br>
                <textarea name="body" placeholder="Coloque seu artigo aqui" class="form-control"
                    id="article"><%= article.body %></textarea>
                <button class="btn btn-succes" type="submit">Cadatrar</button>
            </form>
        </div>
    </div>
    <%- include('../../templates/scripts.ejs') %>